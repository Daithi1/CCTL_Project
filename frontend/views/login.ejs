<!doctype html>
<html>
<head>
    <title>CCTL</title>
    <link rel="stylesheet" href="/assets/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/font-awesome.min.css">
    <style>
        body        { padding-top:70px; }
    </style>
</head>
<body>
   <!--     navbar -->
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand"><span class="fa fa-home"></span> Home</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/results"><span class="fa fa-bar-chart-o"></span> Results</a></li>
                    <li><a href="/signup"><span class="fa fa-user"></span> Sign Up</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- body -->
    <div class="container">

        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> Login</h1>

            <!-- authentication messages -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <form action="/login" method="post">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </form>

            <hr>

            <p>Not registered? <a href="/signup">Signup</a></p>
            <p><a href="/">Home</a></p>

        </div>

    </div>
    <script src="/assets/jquery-2.1.3.min.js"></script>
    <script src="/assets/bootstrap.min.js"></script>
</body>
</html>