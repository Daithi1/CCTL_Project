<!DOCTYPE html>
<html>
<head>
    <title>CCTL</title>
    <link rel="stylesheet" href="/assets/bootstrap.min.css"> 
    <link rel="stylesheet" href="/assets/font-awesome.min.css">
    <style>
        body        { padding-top:70px; }
    </style>
</head>
<body>
    <!--     navbar -->
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand"><span class="fa fa-home"></span> Home</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/results"><span class="fa fa-bar-chart-o"></span> Results</a></li>
                    <li><a href="/survey"><span class="fa fa-question"></span> Survey</a></li>
                    <li><a href="/profile"><span class="fa fa-user"></span> Profile</a></li>
                </ul>
                <div class="container-fluid">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/logout"><span class="fa fa-sign-out"></span> Log Out</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- body -->
    <div class="container">
        <!-- Page Title -->
        <div class="jumbotron text-center">
            <h1>Manage</h1>
        </div>
        <div class="col-sm-6 col-sm-offset-3">
            <div dlass="page-header" align="center">
                <h1>Add a concept</h1>
            </div>
            <form action="/addconcept" method="post">
                <div class="form-group">
                    <label>Concept title</label>
                    <input type="text" class="form-control" name="title">
                </div>
                <div class="form-group">
                    <label>Concept description</label>
                    <input type="text" class="form-control" name="description">
                </div>

                <button type="submit" class="btn btn-primary btn-lg"><span class="fa fa-plus-circle"></span> Add</button>
            </form>
        </div>
        <div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header" align="center">
                        <h1>Concepts</h1>
                    </div>
                    <div class="panel panel-default">
                        <table class="table">
                            <tbody>
                                <% var i = 0 %>
                                <% while(i < concepts.length) { %>
                                     <% if(i % 3 == 0) { %>
                                          <tr>      
                                    <% } %>
                                        <td style="width : 33%">
                                            <div class="well" align="center">
                                                <h3 align="center"> <%= concepts[i].name %></h3>
                                                <p align="center"><%= concepts[i].description %></p>
                                                <%i++%>
                                            </div>    
                                        </td>
                                     <% if(i % 3 == 0) { %>
                                          </tr>      
                                    <% } %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>  
    </div>
    <script src="/assets/jquery-2.1.3.min.js"></script>
    <script src="/assets/bootstrap.min.js"></script>
</body>
</html>